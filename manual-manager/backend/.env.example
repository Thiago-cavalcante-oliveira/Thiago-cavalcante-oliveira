# Database
DATABASE_URL="postgresql://username:password@localhost:5432/manual_manager?schema=public"

# Server
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# MinIO/S3 Storage (Optional)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=manual-manager
MINIO_SECURE=false

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Generation Settings
GEMINI_MAX_RETRIES=5
GEMINI_BASE_WAIT_TIME=1000
GEMINI_MAX_WAIT_TIME=30000

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@manual-manager.com